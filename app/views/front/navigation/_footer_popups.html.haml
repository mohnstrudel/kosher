#search-popup.g-popup
  =form_for(:main_search, url: search_path, method: :get, html: {class: 'g-popup__content g-popup__content_search'}) do |f|
    =f.text_field :query, class: 'g-popup__search-input'
    =button_tag '', type: 'submit', class: 'g-popup__search-submit'

#subscribe-popup.g-popup
