-if object.respond_to?(:category_id)
  .form-group
    %label.col-lg-2.control-label
      =t('admin.form.model.category_id')
    .col-lg-10
      =f.grouped_collection_select :category_id, Category.top_level, :sub_categories, :title, :id, :title, { include_blank: t('admin.form.actions.choose_category') }, class: 'form-control select2_categories'
  .hr-line-dashed

-if object.respond_to?(:manufacturer_id)
  .form-group
    %label.col-lg-2.control-label
      =t('admin.form.model.manufacturer_id')
    .col-lg-10
      =f.grouped_collection_select :manufacturer_id, Manufacturer.top_level, :trademarks, :title, :id, :title, { include_blank: t('admin.form.actions.choose_manufacturer') }, class: 'form-control select2_manufacturers'
  .hr-line-dashed

-if object.respond_to?(:label_id)
  .form-group
    %label.col-lg-2.control-label
      =t('admin.form.model.label_id')
    .col-lg-10
      =f.grouped_collection_select :label_id, Label.top_level, :sub_labels, :title, :id, :title, { include_blank: t('admin.form.actions.choose_label') }, class: 'form-control select2_labels'
  .hr-line-dashed

-if object.respond_to?(:barcodes)
  .form-group
    %label.col-sm-2.control-label
      =t('admin.form.model.barcode')
    .col-sm-6
      =f.fields_for :barcodes do |barcode_builder|
        =render partial: 'admin/shared/form/products/barcode_fields', locals: { f: barcode_builder }
      %span.help-block.m-b-none
        =link_to_add_fields t('admin.form.actions.add_barcode'), f, :barcodes, 'admin/shared/form/products/barcode_fields', class: 'btn btn-default'
  .hr-line-dashed

