-if object.respond_to?(:name)
  .form-group
    %label.col-sm-2.control-label
      =t('admin.form.model.name')
    .col-sm-10
      =f.text_field :name, class: 'form-control'
  .hr-line-dashed
-if object.respond_to?(:front_image)
  .form-group
    %label.col-sm-2.control-label
      =t('admin.form.model.front_image')
    .col-sm-8
      .fileinput.fileinput-new.input-group{"data-provides" => "fileinput"}
        .form-control{"data-trigger" => "fileinput"}
          %i.glyphicon.glyphicon-file.fileinput-exists
          %span.fileinput-filename
        %span.input-group-addon.btn.btn-default.btn-file
          %span.fileinput-new
            =t('admin.form.actions.select_file')
          %span.fileinput-exists
            =t('admin.form.actions.change')
          =f.file_field :front_image
          
        %a.input-group-addon.btn.btn-default.fileinput-exists{"data-dismiss" => "fileinput", :href => "#"}
          =t('admin.form.actions.delete')
    .col-sm-2
      -unless object.front_image.file.nil?
        -if object.front_image.file.exists?
          =image_tag object.front_image.url(:mini_thumb)
  .hr-line-dashed
-if object.respond_to?(:back_image)
  .form-group
    %label.col-sm-2.control-label
      =t('admin.form.model.back_image')
    .col-sm-8
      .fileinput.fileinput-new.input-group{"data-provides" => "fileinput"}
        .form-control{"data-trigger" => "fileinput"}
          %i.glyphicon.glyphicon-file.fileinput-exists
          %span.fileinput-filename
        %span.input-group-addon.btn.btn-default.btn-file
          %span.fileinput-new
            =t('admin.form.actions.select_file')
          %span.fileinput-exists
            =t('admin.form.actions.change')
          =f.file_field :back_image
          
        %a.input-group-addon.btn.btn-default.fileinput-exists{"data-dismiss" => "fileinput", :href => "#"}
          =t('admin.form.actions.delete')
    .col-sm-2
      -unless object.back_image.file.nil?
        -if object.back_image.file.exists?
          =image_tag object.back_image.url(:mini_thumb)
  .hr-line-dashed